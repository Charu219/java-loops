import java.util.Scanner;
public class Main{
    public static void main(String[] args){
        Scanner in=new Scanner(System.in);
        String w=in.nextLine();
        char ch=in.next().charAt(0);
        int count=0;
        for(int i=w.length()-1;i>=0;i--){
            char c=w.charAt(i);
            if(c==ch){
                count++;
            }
        }
        System.out.println(count);
        
    }
}
