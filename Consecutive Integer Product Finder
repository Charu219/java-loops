import java.util.Scanner;
class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter a number: ");
        int n = sc.nextInt();
        for (int i = 1; i <= n / 2; i++) {
            if (i * (i + 1) == n) {
                System.out.println(i + ", " + (i + 1));  
                break;
            }
        }
        sc.close();
    }
}
